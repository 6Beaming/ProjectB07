<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionnaireFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sun_symbol"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:alpha="0.19"
        />
    <TextView
        android:id="@+id/plan_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewTips"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/plan_header"
        android:textColor="@color/browngrey"
        android:fontFamily="@font/hand_regular"
        android:textSize="31sp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/home_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plan_header" />


    <Button
        android:id="@+id/home_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewTips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/simple_button"
        android:text="@string/homeButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
