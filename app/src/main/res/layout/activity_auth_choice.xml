<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthChoiceActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sun_symbol"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:alpha="0.19"
        />
    <LinearLayout
        android:id="@+id/loginOptionsButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonByPin"
            android:layout_width="260dp"
            android:text="Log in with PIN"
            android:textSize="19sp"
            style="@style/simple_button"
            app:cornerRadius="32dp"
            app:elevation="6dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#D6CBE6"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/buttonByPwd"
            android:layout_width="290dp"
            android:text="Log in with Email"
            android:textSize="19sp"
            style="@style/simple_button"
            app:cornerRadius="32dp"
            app:elevation="6dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
