<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinSetupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sun_symbol"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:alpha="0.19"
        />
    <LinearLayout
        android:id="@+id/pinSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/pinFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a 4- or 6-digit PIN"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:padding="12dp"
            style="@style/edit_text_color"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/pinSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm PIN"
            style="@style/edit_text_color"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/buttonNext"
            android:text="Next"
            style="@style/simple_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>